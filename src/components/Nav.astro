---
import ThemeToggle from '../islands/ThemeToggle';
import FilmToggle from '../islands/FilmToggle';
import MagneticButton from '../islands/MagneticButton';

const base = import.meta.env.BASE_URL;

const links = [
	{ href: `${base}#hero`, label: 'Home' },
	{ href: `${base}#capabilities`, label: 'Capabilities' },
	{ href: `${base}#work`, label: 'Work' },
	{ href: `${base}#contact`, label: 'Contact' },
];
---

<nav class="fixed top-0 left-0 z-30 w-full">
	<div class="mx-auto flex w-full max-w-6xl items-center justify-between px-6 py-6 md:px-10">
		<div class="hidden items-center gap-6 text-sm text-mist md:flex">
			{links.map((link) => (
				<a class="transition hover:text-glass" href={link.href} data-nav-link>{link.label}</a>
			))}
		</div>
		<div class="flex items-center gap-4">
			<FilmToggle client:load />
			<ThemeToggle client:load />
			<MagneticButton
				client:load
				href={base + '#contact'}
				className="rounded-full border border-mist/40 px-4 py-2 text-sm text-glass transition hover:border-glass/50"
			>
				Start a project
			</MagneticButton>
		</div>
	</div>
</nav>
