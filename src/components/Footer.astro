---
import FloraFooter from "../islands/FloraFooter";
import FooterLinks from "../islands/FooterLinks";
const base = import.meta.env.BASE_URL;
const { showStudio = false, floraHeight } = Astro.props;
---

<footer class="relative mt-20 min-h-[50vh] flex items-end overflow-hidden">
  {
    !showStudio && (
      <div class="absolute inset-0 z-0 pointer-events-none">
        <FloraFooter client:load height="100%" />
      </div>
    )
  }

  <div class="section-shell relative z-10 w-full pb-12">
    <div class="grid gap-10 md:grid-cols-[2fr_1fr] items-end">
      <div class="space-y-4">
        <p class="text-2xl font-semibold text-glass md:text-3xl">
          Pranjal Prakash
        </p>
        <p class="text-sm uppercase tracking-[0.2em] text-mist">
          ML + CV portfolio
        </p>
        <div class="pt-4">
          <FooterLinks base={base} client:visible />
        </div>
        <div class="pt-2">
          <a
            class="text-xs uppercase tracking-[0.25em] text-mist/70 transition hover:text-white"
            href={base + "pranjal-cv.pdf"}
            download
          >
            Download CV
          </a>
        </div>
      </div>

      <div
        class="flex flex-col gap-2 text-xs uppercase tracking-[0.3em] text-mist md:text-right"
      >
        <span>Bengaluru, India</span>
      </div>
    </div>
    {/* Studio Copyright */}
    <div class="relative mt-16 pt-8 border-t border-white/5">
      {/* Readability Gradient Behind Text */}
      <div
        class="absolute inset-0 -z-10 bg-gradient-to-t from-black via-black/80 to-transparent blur-xl scale-125 transform-gpu opacity-80 pointer-events-none"
      >
      </div>

      <div
        class="flex flex-col md:flex-row justify-between items-center gap-4 text-[10px] uppercase tracking-[0.25em] text-mist/40 font-medium"
      >
        <p>Â© 2026 Pranjal Prakash</p>
        <div class="flex items-center gap-6">
          <span>V 2.0.1</span>
        </div>
      </div>
    </div>
  </div>
</footer>
