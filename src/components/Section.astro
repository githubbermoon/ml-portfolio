---
const { id, title, eyebrow, subtitle, class: className } = Astro.props;
---

<section id={id} class:list={['min-h-screen', className]}>
	<div class="section-shell">
		{eyebrow && <p class="text-xs uppercase tracking-[0.2em] text-mist">{eyebrow}</p>}
		{title && <h2 class="mt-4 text-4xl md:text-5xl">{title}</h2>}
		{subtitle && <p class="mt-4 max-w-2xl text-base text-mist md:text-lg">{subtitle}</p>}
		<div class="mt-10">
			<slot />
		</div>
	</div>
</section>
